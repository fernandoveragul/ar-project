<ProfileScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        MDCard:
            orientation: 'vertical'
            md_bg_color: 'blue'
            MDLabel:
                text: 'Show user info'
                pos_hint: {'center_x': 0.5}

        MDDropDownItem:
            id: drop_item
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            text: 'Item 0'
            on_release: root.menu.open()
            size_hint: 1, 0

        MDRaisedButton:
            text: 'Получить маршрут'
            size_hint: 1, 0

        MDRaisedButton:
            text: 'Вернуться'
            size_hint: 1, 0