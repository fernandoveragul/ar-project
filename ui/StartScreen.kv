<StartScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20

        MDCard:
            orientation: 'vertical'
            md_bg_color: 'blue'

            MDLabel:
                text: 'Camera'
                font_style: 'H2'
                pos_hint: {'center_x': 0.5}

        MDRaisedButton:
            text: 'Включить камеру'
            size_hint: 1, 0
            font_size: '20sp'
            on_release: app.screen_manager.current = 'authorization_screen'
